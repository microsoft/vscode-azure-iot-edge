{
    "version": "0.2.0",
    "configurations": [{
        "name": "%MODULE% Remote Debug (Python)",
        "type": "pythonExperimental",
        "request": "attach",
        "port": 3000,
        "host": "localhost",
        "logToFile": true,
        "redirectOutput": true,
        "pathMappings": [{
            "localRoot": "${workspaceFolder}/modules/%MODULE_FOLDER%",
            "remoteRoot": "%APP_FOLDER%"
        }],
        "windows": {
            "pathMappings": [{
                "localRoot": "${workspaceFolder}\\modules\\%MODULE_FOLDER%",
                "remoteRoot": "%APP_FOLDER%"
            }]
        }
    }]
}